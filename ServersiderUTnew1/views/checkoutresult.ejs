<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>checkout</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
<div class="checkout">
    <h1>CHECKOUT</h1>
<p>Owner ID: <%= ownerID %></p>
<% if (results.length > 0) { %>
    <ul>
        <% results.forEach(result => { %>
		<% if(result.itemName !== '_id') {%>
            <li>
                <p>Item: <%= result.itemName %></p>
                <p>Quantity for <%= result.itemName %>: <%= result.quantity %></p>
            </li>
        <% }}); %>
    </ul>
<% } else { %>
    <p>No results found for <%= itemName %>.</p>
<% } %>
  	<br>
	<form action="/delete" method="get">
      		<button type="submit">Delete the information</button>
  	</form><br>
  	<form action="/ordercomplete" method="get">
      		<button type="submit">complete order</button>
  	</form><br>
  	<form action="/home" method="get">
      		<button type="submit">back to home</button>
  	</form>

</div>
</body>
</html>


